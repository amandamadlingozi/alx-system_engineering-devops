#!/bin/bash

# Script to transfer a file to a remote server

# Check if the number of arguments is less than 4
if [ "$#" -ne 4 ]; then
    echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assign variables to each argument for clarity
PATH_TO_FILE="$1"
IP="$2"
USERNAME="$3"
PATH_TO_SSH_KEY="$4"

# Use scp with strict host key checking disabled to transfer the file
scp -i "$PATH_TO_SSH_KEY" -o StrictHostKeyChecking=no "$PATH_TO_FILE" "${USERNAME}@${IP}:~/"

# Check if scp succeeded
if [ $? -eq 0 ]; then
    echo "File transferred successfully."
else
    echo "Error transferring file."
    exit 1
fi
